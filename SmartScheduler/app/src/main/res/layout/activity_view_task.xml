<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_regular_padding"
    android:paddingRight="@dimen/activity_regular_padding"
    android:paddingLeft="@dimen/activity_regular_padding"
    android:background="@color/backGroundColor"
    tools:context="com.example.dips.smartscheduler.ViewTask">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NO TASK FOUND"
            android:id="@+id/txtViewTaskData"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/regular_font_size"
            android:visibility="invisible"
            android:background="#e98787" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="310dp"
            android:id="@+id/viewTaskListView"
            android:layout_below="@+id/txtViewTask"
            android:layout_centerHorizontal="true" />


    </LinearLayout>
</RelativeLayout>
