<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Task"
            android:id="@+id/txtViewAddTask"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Task Name :"
            android:id="@+id/txtViewTaskName"
            android:layout_below="@+id/txtViewAddTask"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtTextTaskName"
            android:layout_alignTop="@+id/txtViewTaskName"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@+id/txtViewTaskName"
            android:layout_toEndOf="@+id/txtViewTaskName" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Task Description :"
            android:id="@+id/txtViewTaskDiscription"
            android:layout_below="@+id/edtTextTaskName"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/edtTextTaskName" />
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/friendsListView"
            android:layout_above="@+id/btnCreateTask"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtViewIndividualFriends" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Individual Friends"
            android:id="@+id/txtViewIndividualFriends"
            android:textStyle="bold"
            android:layout_below="@+id/dropDownGroupName"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Group          :"
            android:id="@+id/txtViewGroupName"
            android:layout_below="@+id/textViewAddMembers"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dropDownGroupName"
            android:spinnerMode="dropdown"
            android:layout_alignEnd="@+id/edtTextTaskName"
            android:layout_alignStart="@+id/edtTextTaskName"
            android:layout_below="@+id/textViewAddMembers" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add Members"
            android:id="@+id/textViewAddMembers"
            android:textStyle="bold"
            android:layout_below="@+id/edtTextTaskDiscription"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edtTextTaskDiscription"
            android:layout_below="@+id/txtViewTaskDiscription"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Task"
            android:id="@+id/btnCreateTask"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/txtViewAddTask"
            android:layout_marginBottom="35dp" />

    </RelativeLayout>
</ScrollView>